<div class="container-fluid" style="background-color:#001F5B!important;min-height:100vh;height:100%;">
    <div class="container" style="background-color:#f8f9fa!important;padding-top:50px;padding-right:25px;padding-left:25px;padding-bottom:25px;min-height:100vh;height:100%;">        
        
        <h1>Active Users</h1>
        <%= link_to "Back", admin_path%>
        <%# <%= link_to("Update Notification",:controller => :admins, :action => :send_update_profile_emails , :class => 'btn btn-primary') %> %>
        <div class="table-responsive">
            <table class="table table-hover mt-3">
                <thead class="table" style="background-color:#001F5B;color:white">
                    <tr>
                        <th scope="col">User ID</th>
                        <th scope="col">Email</th>
                        <th scope="col">First Name</th>
                        <th scope="col">Last Name</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @approved_users.each do |user| %>
                        <tr class="table-light">
                            <td><%= user.id %></td>
                            <td><%= user.user_email %></td>
                            <td><%= user.user_profile.user_first_name %></td>
                            <td><%= user.user_profile.user_last_name %></td>
                            <td><%= link_to "View", admin_approved_view_path(user.id) %></td>
                        </tr>
                    <% end %>
                </tbody>
            <table>
        </div>
    </div>
</div>