<div class="container-fluid" style="background-color:#001F5B!important;min-height:100vh;height:100%">        
    <div class="container" style="background-color:#f8f9fa!important;padding-top:50px;padding-right:25px;padding-left:25px;padding-bottom:25px;min-height:100vh;height:100%">
        <h1>Pre-Approved Emails</h1>
        <%= link_to "Back", admin_path%>
        
        <br><br>

        <h2> Import with CSV file </h2>
        <p>Upload a CSV file with at least one column with header "Email" and this column should contain all emails that are to be added</p>
        <%= form_tag admin_email_import_path, multipart: true do%>
           <div class="col-6"> <%= file_field_tag :file, class:"form-control"%></div> <br>
            <%= submit_tag "Import csv", class:"btn btn-primary"%>
        <%end%>

        <br><br>

        <%= form_with url: admin_email_add_path, method: :get do |form| %>
            <table class="table table-hover mt-3">
                <thead class="table" style="background-color:#001F5B;color:white">
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @emails.each do |email| %>
                        <tr class="table-light">
                            <td><%= email.email %></td>
                            <td><%= link_to "Delete", admin_email_remove_path(email.id) %></td>
                        </tr>
                    <% end %>
                    <tr>
                        <td><%= form.text_field :email, class:"form-control"%></td>
                        <td><%= form.submit "+", class:"btn btn-primary"%></td>
                    </tr>
                </tbody>
            <table>
        <% end %>

        

    </div>
</div>