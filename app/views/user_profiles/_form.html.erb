  <div class="col-lg-3">
    <label class="col-form-label">Alumni</label>
  </div>
  <div class="col-lg-9">
  Yes
    <%= f.check_box :user_current_member_status %>
  </div>
</div>

<div class="row g-3 align-items-center mb-3" id="recruiter-div">
  <div class="col-lg-3">
