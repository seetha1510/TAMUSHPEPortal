 <form>
    <div class="row g-3 align-items-center mb-3">
  <div class="col-lg-3">
    <label class="col-form-label">First Name <span class="required">*</span></label>
  </div>
  <div class="col-lg-9">
    <%= f.text_field :user_first_name,class:"form-control",placeholder:"Enter First Name" %>
  </div>
</div>

<div class="row g-3 align-items-center mb-3">
  <div class="col-lg-3">
    <label class="col-form-label">Last Name <span class="required">*</span></label>
  </div>
  <div class="col-lg-9">
    <%= f.text_field :user_last_name,class:"form-control",placeholder:"Enter Last Name" %>
  </div>
</div>

<div class="row g-3 align-items-center mb-3">
  <div class="col-lg-3">
    <label class="col-form-label">Email <span class="required">*</span></label>
  </div>
  <div class="col-lg-9">
 <%= f.text_field :user_email,class:"form-control",placeholder:"Enter Email", value:current_account.email, readonly:true %> 
  </div>
</div>

<div class="row g-3 align-items-center mb-3">
  <div class="col-lg-3">
    <label class="col-form-label">MemberSHPE Type <span class="required">*</span></label>
  </div>
  <div class="col-lg-9">
  <%= f.select :user_membership,  @membership_types, {:include_blank => '--' }, class:"form-select" %>
  </div>
</div>


<%
=begin%>
 <%if !User.get_current_user(current_account).approved_status %>
<div class="row g-3 align-items-center mb-3">
