  <%= f.text_field :user_portfolio_url,class:"form-control",placeholder:"Enter Portfolio URL" %>
  </div>
</div>

<div class="row g-3 align-items-center mb-3">
  <div class="col-lg-3">
    <label class="col-form-label">Image</label>
  </div>
  <div class="col-lg-9">

  <% if !current_page?(new_user_profile_path)%>
    <% if @user_profile.user_profile_picture.attached? && @user_profile.user_profile_picture.representable? %>
      <%= link_to 'Remove Image', delete_image_user_profile_url(image_id: @user_profile.user_profile_picture.id), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-sm btn-danger" %>
    <% else %>
      <%= f.file_field :user_profile_picture,class:"form-control" %>
    <% end %>
  <% else %>
    <%= f.file_field :user_profile_picture,class:"form-control" %>
  <% end %>
  </div>
</div>

<div class="row g-3 align-items-center mb-3">
