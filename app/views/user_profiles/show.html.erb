<h1 >People</h1>
<%= form_tag "/user_profiles/show", method: "GET" do %>
  <%= label_tag :search_by_first_name %>
  <%= text_field_tag :search_by_first_name, params[:search_by_first_name] %>
  <%= submit_tag "Search" %>
<% end %>
<table class="table table-hover mt-3">
  <thead class="table" style="background-color:#001F5B;color:white">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Status</th>
      <th scope="col">Graduation</th>
      <th scope="col">Phone Number</th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr class="table-light">
        <td><%= user_profile.user_first_name[0].upcase %><%= user_profile.user_first_name[1..-1].downcase %> <%= user_profile.user_last_name[0].upcase %><%= user_profile.user_last_name[1..-1].downcase %></td>
        <td><%= user_profile.user_email %></td>

        <%if user_profile.user_current_member_status?%>
            <td>Member</td>
        <%else%>
            <td>Alum</td>
        <% end %>
        
        <td><%= user_profile.user_graduating_year %></td>
        <td><%= user_profile.user_phone_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>