<h1 >People</h1>
<%= form_tag "/user_profiles/", method: "GET" do %>


 <div class="input-group mb-3">
 <div class="col-sm-2">
    <%= select_tag :search_type, options_for_select([["First Name"],["Last Name"],["Employer"],["School"],["Field of Study"],["Position Industry"],["Position Title"]],params[:search_type]), :class  => 'form-select'%>
    
  </div>  
  <div class="col-sm-9">
    <%= text_field_tag :search_word, params[:search_word], aria_label: "Text input with dropdown button",  class: "form-control", type: "text",placeholder:"Search" %>
  </div>
  <div class="col-sm-1">
    <%= submit_tag "Search" , class: "btn btn-primary"%>
  </div>
</div> 


<% end %>
<%
=begin%>
 <table class="table table-hover mt-3">
  <thead class="table" style="background-color:#001F5B;color:white">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Status</th>
      <th scope="col">Graduation</th>
      <th scope="col">Phone Number</th>
      <th scope="col">Profile</th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr class="table-light">
        <%if user_profile.user_first_name.blank? && user_profile.user_last_name.blank?%>
            <td></td>
        <%else%>
            <td><%= user_profile.user_first_name[0].upcase %><%= user_profile.user_first_name[1..-1].downcase %> <%= user_profile.user_last_name[0].upcase %><%= user_profile.user_last_name[1..-1].downcase %></td>
        <% end %>
        
        <%if User.find_by(id: user_profile.user_id).user_email.blank? %>
          <td></td>
        <%else%>
          <td><%= User.find_by(id: user_profile.user_id).user_email %></td>
        <% end %>

        <%if user_profile.user_current_member_status?%>
            <td>Member</td>
        <%else%>
            <td>Alum</td>
        <% end %>
        

        <%if user_profile.user_graduating_year.blank? %>
          <td></td>
        <%else%>
          <td><%= user_profile.user_graduating_year %></td>
        <% end %>

        <%if user_profile.user_phone_number.blank? %>
          <td></td>
        <%else%>
          <td>(<%= user_profile.user_phone_number[0..2] %>)<%=user_profile.user_phone_number[3..5] %>-<%=user_profile.user_phone_number[6..9]%></td>
        <% end %>

        
        <td><%= link_to 'View Profile', user_profile_path(user_profile.id) %></td>
        
      </tr>
    <% end %>
  </tbody> 
<%
=end%>

  <div class="row">
  <% @user_profiles.each do |user_profile| %>

  <div class="col-lg-6">
      <div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg p-3">
        <div class="d-flex align-items-center">
            <div class="image">
            <% if user_profile.user_profile_picture.attached? && user_profile.user_profile_picture.representable?%>
              <%= image_tag(user_profile.user_profile_picture, class: "rounded-circle", width: "115")%>
            <% else %>
              <%= image_tag("default_profile_picture.jpg", class: "rounded-circle", width: "115")%>
            <% end %>
            </div>
            <div class="ml-3 w-100 card-content">
                <h4 class="mb-0 mt-0"><%= user_profile.user_first_name[0].upcase %><%= user_profile.user_first_name[1..-1].downcase %> <%= user_profile.user_last_name[0].upcase %><%= user_profile.user_last_name[1..-1].downcase %></h4>
                <span>Member</span>
                <div class="py-1 px-3 mt-2 bg-primary d-flex justify-content-between rounded text-white stats">
                    
                    <%if user_profile.user_facebook_profile_url.present?%>
                      <div class="d-flex flex-column"> 
                        <%= link_to '<i class="fa fa-facebook-square fa-lg" aria-hidden="true"></i>'.html_safe, user_profile.user_facebook_profile_url, target: :_blank %>
                      </div>
                    <%end%>
                    
                    
                    <%if user_profile.user_instagram_profile_url.present?%>
                      <div class="d-flex flex-column">
                        <%= link_to '<i class="fa fa-instagram fa-lg" aria-hidden="true"></i>'.html_safe, user_profile.user_instagram_profile_url, target: :_blank %>
                      </div>
                    <%end%> 
                    
                    <%if user_profile.user_linkedin_profile_url.present?%>
                      <div class="d-flex flex-column">
                        <%= link_to '<i class="fa fa-linkedin-square fa-lg" aria-hidden="true"></i>'.html_safe, user_profile.user_linkedin_profile_url, target: :_blank %>
                      </div>
                    <%end%> 

                    <%if user_profile.user_portfolio_url.present?%>
                      <div class="d-flex flex-column">
                        <%= link_to '<i class="fa fa-link fa-lg" aria-hidden="true"></i>'.html_safe, user_profile.user_portfolio_url, target: :_blank %>
                      </div>
                    <%end%> 
                </div>
                <div class="button mt-2 d-flex flex-row align-items-center"> <%= link_to 'View Profile', user_profile_path(user_profile.id), class: "btn btn-sm btn-outline-primary w-100" %></div>
            </div>
        </div>
    </div>
  </div>
  </div>
  <% end %>
  </div>


</table>